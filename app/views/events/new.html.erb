<%= form_for @event do |f|%>
<%=f.label "Event Name"%><br>
<%=f.text_field :name%>
<br>
<br>
<%=f.label "Category"%><br>
<%=f.text_field :category%>
<br>
<br>
<%=f.label "Description"%><br>
<%=f.text_area :description%>
<br>
<br>
<%=f.label "Time"%><br>
<%=f.datetime_field :time%>
<br>
<br>
<%=f.label "Image URL"%><br>
<%=f.text_field :img_url%>
<br>
<br>
<%=f.label "Location"%><br>
<%= f.collection_select(:location_id, Location.all, :id, :city)%>
<br>
<br>
<%=f.submit%>
<%end%>

<% if flash[:errors]%>
        <% flash[:errors].each do |error|%>
        <li><%=error%></li>
        <%end%>
<%end%>

<hr>
Logged In As: <%=link_to session[:username], user_path(session)%> 
<br>
<%= button_to 'log out', {:controller => :sessions, :action => 'destroy'}, :method => :delete, class: "btn btn-primary"%>

 

